{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Products",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "productName": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "stock": {
      "type": "integer",
      "required": true
    },
    "productDescription": {
      "type": "string"
    },
    "productCode": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "wholesalePrice": {
      "type": "decimal"
    },
    "retailPrice": {
      "type": "decimal"
    },
    "isActive": {
      "type": "boolean",
      "required": true
    },
    "urlProduct": {
      "type": "uid",
      "targetField": "productName"
    },
    "productPhotos": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "products"
    }
  }
}
